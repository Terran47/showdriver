<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="2" id="ru.showdriver.showdriver" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Show Driver</name>
    <description>
        App for android
    </description>
    <author email="oskar@motive.kz" href="showdriver.ru">
        Oskar
    </author>
    <icon src="www/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <splash density="port-hdpi" src="www/res/screen/android/port.png" />
    <splash density="port-ldpi" src="www/res/screen/android/port.png" />
    <splash density="port-mdpi" src="www/res/screen/android/port.png" />
    <splash density="port-xhdpi" src="www/res/screen/android/port.png" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="Orientation" value="portrait" />
</widget>
