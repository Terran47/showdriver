<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.showdriver.showdriver" android-versionCode="2" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Show Driver</name>
    <description>
        App for android
    </description>
    <author email="oskar@motive.kz" href="showdriver.ru">
        Oskar
    </author>
    <icon src="www/icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <splash src="www/res/screen/android/port.png" density="port-hdpi"/>
        <splash src="www/res/screen/android/port.png" density="port-ldpi"/>
        <splash src="www/res/screen/android/port.png" density="port-mdpi"/>
        <splash src="www/res/screen/android/port.png" density="port-xhdpi"/>
        <allow-intent href="market:*" />
        <preference name="Orientation" value="portrait" />
    </platform>
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
</widget>
